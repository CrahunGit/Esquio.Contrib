<Project>
  <PropertyGroup Label="SDK Versions">
    <NetStandardTargetVersion>netstandard2.1</NetStandardTargetVersion>
    <NetCoreTargetVersion>netcoreapp3.0</NetCoreTargetVersion>
    <NetTestSdk>16.3.0</NetTestSdk>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <PropertyGroup Label="Package information">
    <PackageLicenseUrl>https://github.com/Xabaril/Esquio.Contrib/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>http://github.com/xabaril/Esquio.Contrib</PackageProjectUrl>
    <RepositoryUrl>https://github.com/xabaril/Esquio.Contrib</RepositoryUrl>
    <Authors>Xabaril Contributors</Authors>
    <Company>Xabaril</Company>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>true</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <PropertyGroup Label="Package Versions">
    <esquiotoggleshttp>1.1.0$(VersionSuffix)</esquiotoggleshttp>
    <esquiotogglesgeolocation>1.1.0$(VersionSuffix)</esquiotogglesgeolocation>
  </PropertyGroup>
  
  <PropertyGroup Label="Esquio Dependencies">
    <esquio>1.1.0</esquio>
  </PropertyGroup>

  <PropertyGroup Label="Testing Dependencies">
    <xunit>2.4.1</xunit>
    <xunitrunner>2.4.1</xunitrunner>
    <fluentassertions>5.9 .0</fluentassertions>
  </PropertyGroup>
  
  <PropertyGroup Label="CLI Tools Versions">
    <DotnetXUnitPackageVersion>2.4.0</DotnetXUnitPackageVersion>
    <DotnetWatcherToolPackageVersion>2.0.0</DotnetWatcherToolPackageVersion>
  </PropertyGroup>
</Project>